<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_light">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_media_previous"
            android:contentDescription="Volver"
            app:tint="@color/teal_700" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ©º Medikazio berria sortu"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/teal_700"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            android:backgroundTint="@android:color/white"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:text="Izena"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/etIzena"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Adib. Paracetamol"
                    android:inputType="textPersonName"
                    android:padding="12dp"
                    android:background="@drawable/rounded_edittext" />

                <TextView
                    android:text="Dosia"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/etDosia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Adib. 1 pastilla"
                    android:inputType="text"
                    android:padding="12dp"
                    android:background="@drawable/rounded_edittext" />

                <TextView
                    android:text="Frekuentzia"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spinnerFrekuentzia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_spinner"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/etEgunak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Zenbat egunero?"
                    android:inputType="number"
                    android:visibility="gone"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_edittext"
                    android:padding="12dp"/>

                <TextView
                    android:text="Ordua"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spinnerOrdua"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_spinner"
                    android:padding="12dp"/>

                <TextView
                    android:text="Hasierako data"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnHasieraData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data aukeratu"
                    android:backgroundTint="@color/teal_700"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="6dp"
                    android:padding="10dp"
                    android:textAllCaps="false"/>

                <TextView
                    android:id="@+id/tvHasieraData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ez aukeratuta"
                    android:layout_marginTop="4dp"
                    android:textColor="@android:color/darker_gray"/>

                <TextView
                    android:text="Bukaera data"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnBukaeraData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data aukeratu"
                    android:backgroundTint="@color/teal_700"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="6dp"
                    android:padding="10dp"
                    android:textAllCaps="false"/>

                <TextView
                    android:id="@+id/tvBukaeraData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ez aukeratuta"
                    android:layout_marginTop="4dp"
                    android:textColor="@android:color/darker_gray"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMedikazioaGorde"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’¾ Medikazioa gorde"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:cornerRadius="12dp"
            android:padding="12dp"
            android:backgroundTint="@color/teal_700"/>

    </LinearLayout>
</ScrollView>
